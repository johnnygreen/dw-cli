{
  "name": "dw-cli",
  "version": "1.0.3",
  "description": "",
  "main": "./lib/cli.js",
  "bin": {
    "dw": "./lib/cli.js"
  },
  "engines": {
    "node": ">=7.6.0"
  },
  "scripts": {
    "test": "eslint . && ava",
    "postmerge": "bash bin/post-merge",
    "precommit": "lint-staged"
  },
  "lint-staged": {
    "*.js": [
      "eslint . --fix",
      "git add"
    ]
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/mzwallace/dw-cli.git"
  },
  "keywords": [
    "demandware",
    "dw-cli",
    "demandware cli",
    "demandware command-line interface",
    "salesforce commerce cloud"
  ],
  "author": "",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/mzwallace/dw-cli/issues"
  },
  "homepage": "https://github.com/mzwallace/dw-cli#readme",
  "dependencies": {
    "archiver": "2.0.0",
    "axios": "0.16.2",
    "bluebird": "^3.5.0",
    "chalk": "2.1.0",
    "chokidar": "^1.7.0",
    "debug": "3.0.0",
    "lodash": "^4.17.4",
    "node-notifier": "^5.1.2",
    "ora": "1.3.0",
    "shelljs": "0.7.8",
    "xml2js": "0.4.17",
    "yargs": "^6.5.0"
  },
  "devDependencies": {
    "@types/archiver": "2.0.0",
    "@types/chalk": "^0.4.31",
    "@types/chokidar": "1.7.1",
    "@types/debug": "0.0.30",
    "@types/lodash": "4.14.72",
    "@types/node-notifier": "^0.0.28",
    "@types/ora": "1.3.0",
    "@types/xml2js": "0.4.0",
    "@types/yargs": "^6.6.0",
    "ava": "0.21.0",
    "babel-eslint": "^7.2.3",
    "eslint": "4.4.1",
    "eslint-config-prettier": "2.3.0",
    "eslint-plugin-import": "2.7.0",
    "eslint-plugin-prettier": "2.1.2",
    "husky": "0.14.3",
    "lint-staged": "4.0.3",
    "prettier": "1.5.3"
  },
  "ava": {
    "files": [
      "test/specs/*.js"
    ]
  },
  "eslintConfig": {
    "parser": "babel-eslint",
    "extends": [
      "eslint:recommended",
      "plugin:import/errors",
      "plugin:import/warnings",
      "prettier"
    ],
    "plugins": [
      "prettier"
    ],
    "env": {
      "es6": true,
      "node": true,
      "browser": true
    },
    "rules": {
      "prettier/prettier": [
        "error",
        {
          "singleQuote": true,
          "bracketSpacing": false
        }
      ],
      "no-empty": [
        "error",
        {
          "allowEmptyCatch": true
        }
      ],
      "no-console": 0
    }
  }
}
